{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
{% include ('inc/navbar.html.twig') %}
    <h1>Ville index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Des_ville</th>
                <th>Code_ville</th>
                <th>Code_dest</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.desVille }}</td>
                <td>{{ ville.codeVille }}</td>
                <td>{{ ville.codeDest.desDest }}</td>
                <td>
                    <a href="{{ path('ville_show', {'id': ville.id}) }}">show</a>
                    <a href="{{ path('ville_edit', {'id': ville.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ville_new') }}">Create new</a>
{% endblock %}
